@model IEnumerable<Bus_company.Models.ApplicationUser>

@using Microsoft.AspNet.Identity    
<style>
    h2 span {
        color: white;
        font: bold 24px/45px Helvetica, Sans-Serif;
        letter-spacing: -1px;
        background: rgb(0, 0, 0); /* на случай, если следующая строка не сработает */
        background: rgba(0, 0, 0, 0.7);
        padding: 10px;
    }

    .container {
        margin: 30px auto;
        width: 40%;
        height: 100%;
    }
</style>

<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header
            mdl-layout--fixed-tabs">
    <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
            <!-- Title -->
            <span class="mdl-layout-title ">BUSТранзит</span>
            <div class="mdl-layout-spacer"></div>
            <nav class="mdl-navigation">
                <div>
                    @Html.Partial("_LoginPartial")

                </div>
            </nav>
        </div>
        <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
            @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "mdl-layout__tab mdl-color--white mdl-color-text--blue" })
            @Html.ActionLink("Транспорт", "Bus", "Home", null, new { @class = "mdl-layout__tab mdl-color--white mdl-color-text--blue" })
            @Html.ActionLink("Рейсы", "Index", "Timetables", null, new { @class = "mdl-layout__tab mdl-color--white mdl-color-text--blue" })
            @if (User.IsInRole("admin"))
            {<a href="#tab-4" class="mdl-layout__tab mdl-color--white mdl-color-text--blue is-active">Сотрудники</a>}
            @Html.ActionLink("О компании", "Company", "Home", null, new { @class = "mdl-layout__tab mdl-color--white mdl-color-text--blue" })
        </div>
    </header>

    <main class="mdl-layout__content">
        <section class="mdl-layout__tab-panel is-active" id="tab-4">

            <div class="page-content">
                <div class="container">
                    <center>
                        <h2><span>Список пользователей</span></h2>
                        <hr />
                        
                        <h2><span>Список водителей</span></h2>
                        <table class="mdl-data-table mdl-js-data-table  mdl-shadow--2dp">
                            <thead>
                                <tr>
                                    <th class="mdl-data-table__cell--non-numeric"><center>ID</center></th>

                                    <th><center>Email</center></th>
                                    <th><center>Имя</center></th>
                                    <th><center>Фамилия</center></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Driver)
                                {
                                    <tr>
                                        <td class="mdl-data-table__cell--non-numeric"><center>@item.Id</center></td>
                                        <td><center>@item.Email</center></td>
                                        <td><center>@item.Name </center></td>
                                        <td><center>@item.Surname</center></td>
                                        <td>@Html.ActionLink("Удалить", "Delete", "Home", new { id = item.Id }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <hr />
                        
                        <h2><span>Список операторов</span></h2>
                        <table class="mdl-data-table mdl-js-data-table  mdl-shadow--2dp">
                            <thead>
                                <tr>
                                    <th class="mdl-data-table__cell--non-numeric"><center>ID</center></th>

                                    <th><center>Email</center></th>
                                    <th><center>Имя</center></th>
                                    <th><center>Фамилия</center></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Operator)
                                {
                                    <tr>
                                        <td class="mdl-data-table__cell--non-numeric"><center>@item.Id</center></td>
                                        <td><center>@item.Email</center></td>
                                        <td><center>@item.Name </center></td>
                                        <td><center>@item.Surname</center></td>
                                        <td>@Html.ActionLink("Удалить", "Delete", "Home", new { id = item.Id }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <hr />
                        
                        <h2><span>Список обычных пользователей</span></h2>
                        <table class="mdl-data-table mdl-js-data-table  mdl-shadow--2dp">
                            <thead>
                                <tr>
                                    <th class="mdl-data-table__cell--non-numeric"><center>ID</center></th>

                                    <th><center>Email</center></th>
                                    <th><center>Имя</center></th>
                                    <th><center>Фамилия</center></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.User)
                                {
                                    <tr>
                                        <td class="mdl-data-table__cell--non-numeric"><center>@item.Id</center></td>
                                        <td><center>@item.Email</center></td>
                                        <td><center>@item.Name </center></td>
                                        <td><center>@item.Surname</center></td>
                                        <td>@Html.ActionLink("Удалить", "Delete", "Home", new { id = item.Id }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <hr />
                        <br />
                        <div>
                            @Html.ActionLink("Редактирование ролей", "Index", "Roles", null, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" })

                            @Html.ActionLink("Менеджер ролей пользователей", "ManageUserRoles", "Roles", null, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" })
                        </div>
                    </center> 
                </div> 
            </div>
        </section>
    </main>
</div>
